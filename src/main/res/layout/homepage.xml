        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/star"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp">
        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/account"
            android:layout_marginLeft="35dp"
